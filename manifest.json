{
  "name": "Random Jumpscare Chance",
  "description": "Has a small chance to trigger a jumpscare every minute.",
  "version": "0.1",
  "manifest_version": 3,
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "We do a little trolling"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/jumpscare.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["html/jumpscare.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}